<Window x:Class="TaxiGO.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="TaxiGO - Админ" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE3F2FD" Offset="0"/>
                <GradientStop Color="#FFBBDEFB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="20" Background="#FF1976D2" CornerRadius="10">
            <TextBlock x:Name="WelcomeText" Text="Добро пожаловать, Админ!" FontSize="24" Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.2"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <hc:TabControl Grid.Row="1" Margin="20" Style="{StaticResource TabControlCapsule}" Background="Transparent" BorderThickness="0">
            <hc:TabItem Header="Пользователи">
                <hc:TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding}" FontSize="16" Foreground="#FF1976D2"/>
                        </StackPanel>
                    </DataTemplate>
                </hc:TabItem.HeaderTemplate>
                <Border Padding="20" Background="White" CornerRadius="10">
                    <StackPanel>
                        <DataGrid x:Name="UsersGrid" AutoGenerateColumns="True" Margin="0,0,0,10" CanUserAddRows="False"/>
                        <Button Content="Переключить активность" Width="200" Style="{StaticResource ButtonPrimary}" Background="#FF1976D2" Foreground="White" Click="ToggleUserActive_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </hc:TabItem>
            <hc:TabItem Header="Тарифы">
                <hc:TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💰" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding}" FontSize="16" Foreground="#FF1976D2"/>
                        </StackPanel>
                    </DataTemplate>
                </hc:TabItem.HeaderTemplate>
                <Border Padding="20" Background="White" CornerRadius="10">
                    <StackPanel>
                        <DataGrid x:Name="TariffsGrid" AutoGenerateColumns="True" Margin="0,0,0,10" CanUserAddRows="False"/>
                        <hc:TextBox x:Name="TariffName" hc:InfoElement.Title="Название тарифа" Width="200" Margin="0,0,0,10" FontSize="16" Style="{StaticResource TextBoxExtend}"/>
                        <hc:TextBox x:Name="BasePrice" hc:InfoElement.Title="Базовая цена" Width="200" Margin="0,0,0,10" FontSize="16" Style="{StaticResource TextBoxExtend}"/>
                        <Button Content="Добавить тариф" Width="150" Style="{StaticResource ButtonPrimary}" Background="#FF1976D2" Foreground="White" Click="AddTariff_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </hc:TabItem>
            <hc:TabItem Header="Промокоды">
                <hc:TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎟️" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding}" FontSize="16" Foreground="#FF1976D2"/>
                        </StackPanel>
                    </DataTemplate>
                </hc:TabItem.HeaderTemplate>
                <Border Padding="20" Background="White" CornerRadius="10">
                    <StackPanel>
                        <DataGrid x:Name="PromoCodesGrid" AutoGenerateColumns="True" Margin="0,0,0,10" CanUserAddRows="False"/>
                        <hc:TextBox x:Name="PromoCodeText" hc:InfoElement.Title="Код" Width="200" Margin="0,0,0,10" FontSize="16" Style="{StaticResource TextBoxExtend}"/>
                        <hc:TextBox x:Name="Discount" hc:InfoElement.Title="Скидка (%)" Width="200" Margin="0,0,0,10" FontSize="16" Style="{StaticResource TextBoxExtend}"/>
                        <Button Content="Добавить промокод" Width="150" Style="{StaticResource ButtonPrimary}" Background="#FF1976D2" Foreground="White" Click="AddPromoCode_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </hc:TabItem>
        </hc:TabControl>
    </Grid>
</Window>