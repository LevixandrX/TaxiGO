<Window x:Class="TaxiGO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TaxiGO - Авторизация" 
        Height="700" 
        MinHeight="600"
        Width="400" 
        MinWidth="400"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent">
    <Grid x:Name="MainGrid">
        <Grid.Clip>
            <RectangleGeometry x:Name="WindowClip" RadiusX="20" RadiusY="20" Rect="0,0,400,700"/>
        </Grid.Clip>
        <Border x:Name="MainBorder" CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1A1A1A" Offset="0"/>
                    <GradientStop Color="#FF2E2E2E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid x:Name="InnerGrid" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть окна (заголовок) -->
                <Grid Grid.Row="0" Background="Transparent" MouseDown="TitleBar_MouseDown">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,5,5,0">
                        <Button x:Name="MinimizeButton" Content="—" Width="30" Height="30" Margin="0,0,5,0" Foreground="#FFE0E0E0" Click="MinimizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF616161"/>
                                                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="MaximizeRestoreButton" Width="30" Height="30" Margin="0,0,5,0" Foreground="#FFE0E0E0" Click="MaximizeRestoreButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="🗖"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF616161"/>
                                                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                                                        <Setter Property="Content" Value="🗗"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseButton" Content="×" Width="30" Height="30" Foreground="#FFE0E0E0" Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF8B0000"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Логотип -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,20">
                    <Border Width="120" Height="120" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF42A5F5" Offset="0"/>
                                <GradientStop Color="#FF7C4DFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Clip>
                            <EllipseGeometry RadiusX="60" RadiusY="60" Center="60,60"/>
                        </Border.Clip>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.8" Color="#FF42A5F5"/>
                        </Border.Effect>
                        <Grid>
                            <materialDesign:PackIcon Kind="Taxi" Width="80" Height="80" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="40" CenterY="40"/>
                                </materialDesign:PackIcon.RenderTransform>
                                <materialDesign:PackIcon.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.7" To="1" Duration="0:0:1.5" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" 
                                                                From="1" To="1.1" Duration="0:0:1.5" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" 
                                                                From="1" To="1.1" Duration="0:0:1.5" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </materialDesign:PackIcon.Triggers>
                            </materialDesign:PackIcon>
                        </Grid>
                    </Border>
                    <TextBlock Text="TaxiGO" FontSize="40" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#FFE0E0E0" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF42A5F5" Direction="320" ShadowDepth="3" Opacity="0.8"/>
                        </TextBlock.Effect>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)" 
                                                        From="20" To="0" Duration="0:0:1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="0"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </StackPanel>

                <!-- Вкладки "Вход" и "Регистрация" -->
                <Grid x:Name="TabGrid" Grid.Row="2" Margin="0,0,0,20" HorizontalAlignment="Center">
                    <Grid x:Name="TabGridInner" Width="300" Height="40" MaxWidth="400">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Левая вкладка (Вход) -->
                        <Button x:Name="LoginTabButton" Grid.Column="0" Click="LoginTabButton_Click" Background="Transparent" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Border" CornerRadius="10,0,0,10">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#FF42A5F5" Offset="0"/>
                                                            <GradientStop Color="#FF7C4DFF" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <materialDesign:PackIcon x:Name="LoginIcon" Kind="Login" Width="16" Height="16" Foreground="White" Margin="0,0,5,0" Opacity="1">
                                                                <materialDesign:PackIcon.RenderTransform>
                                                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="8" CenterY="8"/>
                                                                </materialDesign:PackIcon.RenderTransform>
                                                            </materialDesign:PackIcon>
                                                            <TextBlock Text="Вход" FontSize="14" FontFamily="Segoe UI" Foreground="White" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#FF7C4DFF" Offset="0"/>
                                                                    <GradientStop Color="#FF42A5F5" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=TabControl}" Value="1">
                                                        <Setter TargetName="Border" Property="Background" Value="#FF2E2E2E"/>
                                                        <Setter TargetName="LoginIcon" Property="Opacity" Value="0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=TabControl}" Value="0">
                                                        <Setter TargetName="LoginIcon" Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="Button.Click">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" 
                                                            From="0.95" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" 
                                                            From="0.95" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="75" CenterY="20"/>
                            </Button.RenderTransform>
                        </Button>

                        <!-- Правая вкладка (Регистрация) -->
                        <Button x:Name="RegisterTabButton" Grid.Column="1" Click="RegisterTabButton_Click" Background="Transparent" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Border" CornerRadius="0,10,10,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="#FF2E2E2E"/>
                                                    </Border.Background>
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <materialDesign:PackIcon x:Name="RegisterIcon" Kind="AccountPlus" Width="16" Height="16" Foreground="White" Margin="0,0,5,0" Opacity="0">
                                                                <materialDesign:PackIcon.RenderTransform>
                                                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="8" CenterY="8"/>
                                                                </materialDesign:PackIcon.RenderTransform>
                                                            </materialDesign:PackIcon>
                                                            <TextBlock Text="Регистрация" FontSize="14" FontFamily="Segoe UI" Foreground="#FFE0E0E0" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#FF616161"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=TabControl}" Value="1">
                                                        <Setter TargetName="Border" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#FF42A5F5" Offset="0"/>
                                                                    <GradientStop Color="#FF7C4DFF" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter TargetName="RegisterIcon" Property="Opacity" Value="1"/>
                                                        <Setter TargetName="RegisterIcon" Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=TabControl}" Value="0">
                                                        <Setter TargetName="RegisterIcon" Property="Opacity" Value="0"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="Button.Click">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" 
                                                            From="0.95" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" 
                                                            From="0.95" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="75" CenterY="20"/>
                            </Button.RenderTransform>
                        </Button>
                    </Grid>
                    <TabControl x:Name="TabControl" Background="Transparent" BorderThickness="0" Visibility="Collapsed" SelectionChanged="TabControl_SelectionChanged">
                        <TabItem Header="Вход" IsSelected="True"/>
                        <TabItem Header="Регистрация"/>
                    </TabControl>
                </Grid>

                <!-- Панель авторизации и регистрации -->
                <Grid Grid.Row="3" x:Name="ContentGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель авторизации -->
                    <StackPanel x:Name="LoginPanel" Grid.Row="0" Visibility="Visible" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Opacity" Value="0"/>
                                <Style.Triggers>
                                    <!-- Триггер для Loaded -->
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)" 
                                                                From="20" To="0" Duration="0:0:0.5">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <!-- Триггер для Visibility -->
                                    <DataTrigger Binding="{Binding Visibility, RelativeSource={RelativeSource Self}}" Value="Visible">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)" 
                                                                    From="20" To="0" Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel.RenderTransform>
                            <TranslateTransform X="0" Y="0"/>
                        </StackPanel.RenderTransform>
                        <StackPanel x:Name="LoginInputPanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                            <TextBox x:Name="LoginTextBox" 
                                     Height="56" 
                                     FontSize="16" 
                                     Foreground="#FFFFFFFF" 
                                     materialDesign:HintAssist.Hint="Логин" 
                                     materialDesign:HintAssist.Foreground="#FF888888"
                                     materialDesign:HintAssist.FloatingOffset="0,-20"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                <TextBox.Resources>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                        <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                        <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#FF888888"/>
                                        <Setter Property="Background" Value="#FF2E2E2E"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                        <StackPanel x:Name="PasswordInputPanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                            <Grid Height="56">
                                <PasswordBox x:Name="PasswordBox" 
                                             Height="56" 
                                             FontSize="16" 
                                             Foreground="#FFFFFFFF" 
                                             materialDesign:HintAssist.Hint="Пароль" 
                                             materialDesign:HintAssist.Foreground="#FF888888"
                                             materialDesign:HintAssist.FloatingOffset="0,-20"
                                             Visibility="Visible"
                                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                                    <PasswordBox.Resources>
                                        <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                                            <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                            <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#FF888888"/>
                                            <Setter Property="Background" Value="#FF2E2E2E"/>
                                            <Setter Property="Padding" Value="10,0,40,0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </PasswordBox.Resources>
                                </PasswordBox>
                                <TextBox x:Name="PasswordTextBox" 
                                         Height="56" 
                                         FontSize="16" 
                                         Foreground="#FFFFFFFF" 
                                         materialDesign:HintAssist.Hint="Пароль" 
                                         materialDesign:HintAssist.Foreground="#FF888888"
                                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                         Visibility="Collapsed"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                            <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#FF888888"/>
                                            <Setter Property="Background" Value="#FF2E2E2E"/>
                                            <Setter Property="Padding" Value="10,0,40,0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <Button x:Name="TogglePasswordButton" 
                                        Width="30" 
                                        Height="30" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center" 
                                        Margin="0,0,10,0" 
                                        Click="TogglePasswordButton_Click" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Panel.ZIndex="1">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <materialDesign:PackIcon x:Name="TogglePasswordIcon" 
                                                             Kind="Eye" 
                                                             Width="20" 
                                                             Height="20"
                                                             Foreground="#FF888888">
                                        <materialDesign:PackIcon.RenderTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="1" CenterX="10" CenterY="10"/>
                                        </materialDesign:PackIcon.RenderTransform>
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF42A5F5"/>
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1.2" ScaleY="1.2" CenterX="10" CenterY="10"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsPressed}" Value="True">
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="10" CenterY="10"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <TextBlock Text="Забыли пароль?" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10,0,15" 
                                   Foreground="#FF42A5F5" 
                                   Cursor="Hand" 
                                   MouseDown="ForgotPassword_Click">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                            <Setter Property="Foreground" Value="#FF7C4DFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button x:Name="LoginButton" 
                                Content="Войти" 
                                Width="200" 
                                Height="40" 
                                Click="ActionButton_Click" 
                                Margin="0,20,0,20"
                                MaxWidth="300">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF42A5F5" Offset="0"/>
                                    <GradientStop Color="#FF7C4DFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="White"/>
                            </Button.Foreground>
                            <Button.Effect>
                                <DropShadowEffect Color="#FF42A5F5" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                            </Button.Effect>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Border" CornerRadius="20" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#FF7C4DFF" Offset="0"/>
                                                                    <GradientStop Color="#FF42A5F5" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="100" CenterY="20"/>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.8" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>

                    <!-- Панель регистрации -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="RegisterPanel" Visibility="Collapsed" HorizontalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <!-- Триггер для Loaded -->
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)" 
                                                                    From="20" To="0" Duration="0:0:0.5">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <!-- Триггер для Visibility -->
                                        <DataTrigger Binding="{Binding Visibility, RelativeSource={RelativeSource Self}}" Value="Visible">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)" 
                                                                        From="-20" To="0" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <StackPanel.RenderTransform>
                                <TranslateTransform X="0" Y="0"/>
                            </StackPanel.RenderTransform>
                            <StackPanel x:Name="RegNamePanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                                <TextBox x:Name="RegNameTextBox" 
                                         Height="56" 
                                         FontSize="16" 
                                         Foreground="#FFFFFFFF" 
                                         materialDesign:HintAssist.Hint="Имя" 
                                         materialDesign:HintAssist.Foreground="#FF888888"
                                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                            <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#FF888888"/>
                                            <Setter Property="Background" Value="#FF2E2E2E"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                            <StackPanel x:Name="RegLoginPanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                                <TextBox x:Name="RegLoginTextBox" 
                                         Height="56" 
                                         FontSize="16" 
                                         Foreground="#FFFFFFFF" 
                                         materialDesign:HintAssist.Hint="Логин" 
                                         materialDesign:HintAssist.Foreground="#FF888888"
                                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                            <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#FF888888"/>
                                            <Setter Property="Background" Value="#FF2E2E2E"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                            <StackPanel x:Name="RegPasswordPanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                                <Grid Height="56">
                                    <PasswordBox x:Name="RegPasswordBox" 
                                                 Height="56" 
                                                 FontSize="16" 
                                                 Foreground="#FFFFFFFF" 
                                                 materialDesign:HintAssist.Hint="Пароль" 
                                                 materialDesign:HintAssist.Foreground="#FF888888"
                                                 materialDesign:HintAssist.FloatingOffset="0,-20"
                                                 Visibility="Visible"
                                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                                        <PasswordBox.Resources>
                                            <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                                                <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                                <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                                <Setter Property="BorderBrush" Value="#FF888888"/>
                                                <Setter Property="Background" Value="#FF2E2E2E"/>
                                                <Setter Property="Padding" Value="10,0,40,0"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </PasswordBox.Resources>
                                    </PasswordBox>
                                    <TextBox x:Name="RegPasswordTextBox" 
                                             Height="56" 
                                             FontSize="16" 
                                             Foreground="#FFFFFFFF" 
                                             materialDesign:HintAssist.Hint="Пароль" 
                                             materialDesign:HintAssist.Foreground="#FF888888"
                                             materialDesign:HintAssist.FloatingOffset="0,-20"
                                             Visibility="Collapsed"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                        <TextBox.Resources>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                                <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                                <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                                <Setter Property="BorderBrush" Value="#FF888888"/>
                                                <Setter Property="Background" Value="#FF2E2E2E"/>
                                                <Setter Property="Padding" Value="10,0,40,0"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                    <Button x:Name="ToggleRegPasswordButton" 
                                            Width="30" 
                                            Height="30" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center" 
                                            Margin="0,0,10,0" 
                                            Click="ToggleRegPasswordButton_Click" 
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Panel.ZIndex="1">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <materialDesign:PackIcon x:Name="ToggleRegPasswordIcon" 
                                                                 Kind="Eye" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#FF888888">
                                            <materialDesign:PackIcon.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="10" CenterY="10"/>
                                            </materialDesign:PackIcon.RenderTransform>
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF42A5F5"/>
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2" CenterX="10" CenterY="10"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsPressed}" Value="True">
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="10" CenterY="10"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Button>
                                </Grid>
                            </StackPanel>
                            <StackPanel x:Name="RegPhonePanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                                <TextBox x:Name="RegPhoneTextBox" 
                                         Height="56" 
                                         FontSize="16" 
                                         Foreground="#FFFFFFFF" 
                                         materialDesign:HintAssist.Hint="Телефон" 
                                         materialDesign:HintAssist.Foreground="#FF888888"
                                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                         PreviewTextInput="RegPhoneTextBox_PreviewTextInput"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                            <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#FF888888"/>
                                            <Setter Property="Background" Value="#FF2E2E2E"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                            <StackPanel x:Name="RegEmailPanel" Width="300" Margin="0,0,0,15" MaxWidth="600">
                                <TextBox x:Name="RegEmailTextBox" 
                                         Height="56" 
                                         FontSize="16" 
                                         Foreground="#FFFFFFFF" 
                                         materialDesign:HintAssist.Hint="Электронная почта (опционально)" 
                                         materialDesign:HintAssist.Foreground="#FF888888"
                                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                    <TextBox.Resources>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <Setter Property="CaretBrush" Value="#FF42A5F5"/>
                                            <Setter Property="SelectionBrush" Value="#FF42A5F5"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#FF888888"/>
                                            <Setter Property="Background" Value="#FF2E2E2E"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF42A5F5"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                            <Button x:Name="RegisterButton" 
                                    Content="Зарегистрироваться" 
                                    Width="200" 
                                    Height="40" 
                                    Click="ActionButton_Click" 
                                    Margin="0,20,0,20"
                                    MaxWidth="300">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FF42A5F5" Offset="0"/>
                                        <GradientStop Color="#FF7C4DFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Foreground>
                                    <SolidColorBrush Color="White"/>
                                </Button.Foreground>
                                <Button.Effect>
                                    <DropShadowEffect Color="#FF42A5F5" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontFamily" Value="Segoe UI"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="Border" CornerRadius="20" Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                        <GradientStop Color="#FF7C4DFF" Offset="0"/>
                                                                        <GradientStop Color="#FF42A5F5" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="100" CenterY="20"/>
                                </Button.RenderTransform>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.8" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>