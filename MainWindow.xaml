<Window x:Class="TaxiGO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="TaxiGO - Авторизация" 
        Height="750" 
        MinHeight="750"
        Width="450" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent">
    <Border CornerRadius="20" Background="#FFFFFFFF" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="#FF1976D2"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFE3F2FD" Offset="0"/>
                    <GradientStop Color="#FFBBDEFB" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Кнопки закрытия и сворачивания -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,10,0">
                <Button x:Name="MinimizeButton" Content="—" Width="30" Height="30" Margin="0,0,5,0" Background="Transparent" BorderThickness="0" Foreground="#FF1976D2" Click="MinimizeButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD6E4FF"/>
                                    <Setter Property="Foreground" Value="#FF1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="CloseButton" Content="×" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#FF1976D2" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFFF6F61"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Логотип и заголовок -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,30,0,40">
                <Border CornerRadius="50" Background="#FF1976D2" Width="100" Height="100" Margin="0,0,0,15">
                    <TextBlock Text="🚕" FontSize="60" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)" 
                                                       From="0" To="360" Duration="0:0:3" AutoReverse="False"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Border>
                <TextBlock Text="TaxiGO" FontSize="36" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#FF1976D2" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF42A5F5" Direction="320" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <!-- Переключение вкладок -->
            <hc:TabControl x:Name="TabControl" Grid.Row="2" Style="{StaticResource TabControlCapsule}" Margin="0,0,0,40" Background="Transparent" BorderThickness="0" SelectionChanged="TabControl_SelectionChanged">
                <hc:TabControl.Resources>
                    <Style TargetType="hc:TabItem">
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Background" Value="#FFD6E4FF"/>
                        <Setter Property="Foreground" Value="#FF1976D2"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF42A5F5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </hc:TabControl.Resources>
                <hc:TabItem Header="Вход" IsSelected="True">
                    <hc:TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔑" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding}" FontSize="16" FontFamily="Segoe UI"/>
                            </StackPanel>
                        </DataTemplate>
                    </hc:TabItem.HeaderTemplate>
                </hc:TabItem>
                <hc:TabItem Header="Регистрация">
                    <hc:TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📝" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding}" FontSize="16" FontFamily="Segoe UI"/>
                            </StackPanel>
                        </DataTemplate>
                    </hc:TabItem.HeaderTemplate>
                </hc:TabItem>
            </hc:TabControl>

            <!-- Общий ScrollViewer для обеих панелей -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель авторизации -->
                    <StackPanel x:Name="LoginPanel" Grid.Row="0" Visibility="Visible" HorizontalAlignment="Center" Opacity="0">
                        <StackPanel.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3" BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </StackPanel.Triggers>
                        <hc:TextBox x:Name="LoginTextBox" hc:InfoElement.Title="Логин" Width="320" Margin="0,0,0,20" FontSize="16" FontFamily="Segoe UI" hc:InfoElement.Placeholder="Введите логин"/>
                        <Grid Width="320" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <hc:PasswordBox x:Name="PasswordBox" Grid.Column="0" FontSize="16" FontFamily="Segoe UI" Margin="0,0,10,0" hc:InfoElement.Title="Пароль" hc:InfoElement.Placeholder="Введите пароль" Visibility="Visible"/>
                            <hc:TextBox x:Name="PasswordTextBox" Grid.Column="0" FontSize="16" FontFamily="Segoe UI" Margin="0,0,10,0" Visibility="Collapsed" hc:InfoElement.Title="Пароль" hc:InfoElement.Placeholder="Введите пароль"/>
                            <Button x:Name="TogglePasswordButton" Grid.Column="1" Width="50" Height="50" Margin="0,10,0,0" Click="TogglePasswordButton_Click" Background="Transparent" BorderThickness="0">
                                <Image x:Name="TogglePasswordImage" Source="/Resources/eye.png" Width="40" Height="40" Margin="5" Stretch="Uniform">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Opacity" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Button>
                        </Grid>
                        <TextBlock Text="Забыли пароль?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="#FF1976D2" Cursor="Hand" MouseDown="ForgotPassword_Click">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="TextDecorations" Value="None"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                            <Setter Property="Foreground" Value="#FF42A5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <!-- Кнопка "Войти" -->
                        <Button x:Name="LoginButton" Content="Войти" Width="220" Height="50" Click="ActionButton_Click" 
                                Background="#FF1976D2" Foreground="White" HorizontalAlignment="Center" Margin="0,40,0,20">
                            <Button.Effect>
                                <DropShadowEffect Color="#FF1976D2" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Button.Effect>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="25" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#FF42A5F5" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#FF1976D2" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>

                    <!-- Панель регистрации -->
                    <StackPanel x:Name="RegisterPanel" Grid.Row="1" Visibility="Collapsed" HorizontalAlignment="Center" Opacity="0">
                        <StackPanel.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3" BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </StackPanel.Triggers>
                        <hc:TextBox x:Name="RegNameTextBox" hc:InfoElement.Title="Имя" Width="320" Margin="0,0,0,20" FontSize="16" FontFamily="Segoe UI" hc:InfoElement.Placeholder="Ваше имя"/>
                        <hc:TextBox x:Name="RegLoginTextBox" hc:InfoElement.Title="Логин" Width="320" Margin="0,0,0,20" FontSize="16" FontFamily="Segoe UI" hc:InfoElement.Placeholder="Придумайте логин"/>
                        <Grid Width="320" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <hc:PasswordBox x:Name="RegPasswordBox" Grid.Column="0" FontSize="16" FontFamily="Segoe UI" Margin="0,0,10,0" hc:InfoElement.Title="Пароль" hc:InfoElement.Placeholder="Придумайте пароль" Visibility="Visible"/>
                            <hc:TextBox x:Name="RegPasswordTextBox" Grid.Column="0" FontSize="16" FontFamily="Segoe UI" Margin="0,0,10,0" Visibility="Collapsed" hc:InfoElement.Title="Пароль" hc:InfoElement.Placeholder="Придумайте пароль"/>
                            <Button x:Name="ToggleRegPasswordButton" Grid.Column="1" Width="50" Height="50" Margin="0,10,0,0" Click="ToggleRegPasswordButton_Click" Background="Transparent" BorderThickness="0">
                                <Image x:Name="ToggleRegPasswordImage" Source="/Resources/eye.png" Width="40" Height="40" Margin="5" Stretch="Uniform">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Opacity" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Button>
                        </Grid>
                        <hc:TextBox x:Name="RegPhoneTextBox" hc:InfoElement.Title="Телефон" Width="320" Margin="0,0,0,20" FontSize="16" FontFamily="Segoe UI" hc:InfoElement.Placeholder="8 (XXX) XXX-XX-XX" PreviewTextInput="RegPhoneTextBox_PreviewTextInput"/>
                        <!-- Кнопка "Зарегистрироваться" -->
                        <Button x:Name="RegisterButton" Content="Зарегистрироваться" Width="220" Height="50" Click="ActionButton_Click" 
                                Background="#FF1976D2" Foreground="White" HorizontalAlignment="Center" Margin="0,40,0,40">
                            <Button.Effect>
                                <DropShadowEffect Color="#FF1976D2" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Button.Effect>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="25" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Button.RenderTransform>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#FF42A5F5" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#FF1976D2" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>